<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="course_list_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">treee,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first Course
                </p>
            </field>
        </record>
        <!-- 1 is highest priority -->
        <menuitem name="Odoo Academy"
                  id="menu_academy"        
                  sequence="1"
        />
        <menuitem name="Odoo Academy Sub"
                  id="menu_academy_sub"
                  parent="menu_academy"
                  sequence="2"
        />
        <menuitem name="Courses"
                  id="menu_academy_course"
                  parent="menu_academy_sub"
                  sequence="3"
                  action="course_list_action"
        />
        
    </data>
</odoo>